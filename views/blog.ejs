<!DOCTYPE html>
<html lang="en">

<%- include('./include/head.ejs') %>

  <body>
    <div class="uk-cover-container uk-height-medium">
      <img src="img/header.svg" alt="" uk-cover>
      <nav class="uk-navbar-container" uk-navbar>
        <div class="uk-navbar-left">
          <a class="uk-navbar-item uk-logo" href="/"><img src="img/logo.svg"></a>
          <ul class="uk-navbar-nav">
            <li><a href="/">Inicio</a></li>
            <li> <a href="acerca">Acerca</a></li>
            <li class="uk-active" > <a href="blog">Blog</a></li>
            <li><a href="contacto">Contacto</a></li>
          </ul>
        </div>
      </nav>
    </div>

    <div class="uk-card uk-card-default uk-card-body">
      <h1 class="uk-heading-small uk-center-top">Create a new post</h1>
      <form method="POST" action="blog">
        <fieldset class="uk-fieldset">
          <legend class="uk-legend">Title</legend>
          <div class="uk-margin">
            <input class="uk-input" name="title" type="text" placeholder="Title">
          </div>
          <legend class="uk-legend">Body</legend>
          <div class="uk-margin">
            <textarea class="uk-textarea" name="body" rows="5" placeholder="Body"></textarea>
          </div>
          <div class="uk-margin">
            <button type="submit" class="uk-button uk-button-primary">Send</button>
          </div>
        </fieldset>
      </form>
    </div>

    <div class="uk-child-width-expand@s uk-text-center" uk-grid>
      <% posts.forEach(p=> {%>
        <div>
          <div class="uk-card uk-card-default uk-card-body">
            <h1>
              <%= p.title %>
            </h1>
            <%= p.body %>
          </div>
        </div>
        <% }); %>
    </div>
</body>

</html>